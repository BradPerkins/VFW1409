var data = function(){
	var spacing = 80;
	for(n in comicHero){
		var headerLabel = Ti.UI.createLabel({
			text: comicHero[n].header,
			left: 15,
			right: 15,
			top: spacing,
			height: 25,
			backgroundColor: '#333',
			font: {fontSize: 22, fontStyle: "Helvetica"},
			color: "#fafafa",
		});
		
		spacing = headerLabel.top + headerLabel.height + 10;
		console.log(spacing);
		
		
		//labels created
		for(m in comicHero[n].good){
			var itemLabel = Ti.UI.createLabel({
				text: comicHero[n].good[m].name,  // title 
				details: comicHero[n].good[m].description,
				left: 30,
				right: 15,
				top: spacing,
				height: 25,
				backgroundColor:"#ffffff",
				font: {fontSize: 25, fontStyle: "Helvetica"},
				color: "#333",
				
			});
			window1.add(itemLabel);
			spacing = itemLabel.top + itemLabel.height + 10;
			itemLabel.addEventListener("click", getDetail);
		}
		
			for(m in comicHero[n].evil){
				var itemLabel = Ti.UI.createLabel({
					text: comicHero[n].evil[m].name,  // title 
					details: comicHero[n].evil[m].description,
					left: 30,
					right: 15,
					top: spacing,
					height: 25,
					backgroundColor:"#ffffff",
					font: {fontSize: 25, fontStyle: "Helvetica"},
					color: "#333",
					
				});
				window1.add(itemLabel);
				spacing = itemLabel.top + itemLabel.height + 10;
				itemLabel.addEventListener("click", getDetail);
		}
		
		window1.add(headerLabel);
		spacing = itemLabel.top + itemLabel.height + 40;
	}
};

data();

navWin.open();



		
	
	
	
	
	
	
	
	
	
	
