var marvel = [
		{title: "Spider-Man", description: "When Peter Parker was bitten by an irradiated spider, radioactive mutagenic enzymes in the spider's venom quickly caused numerous body-wide changes. Immediately after the bite, he was granted his original powers: primarily superhuman strength, reflexes, and balance; the ability to cling tenaciously to most surfaces; and a subconscious precognitive sense of danger, which he called a spider-sense."}, 
		{title: "Thor", description: "thor"}, 
		{title: "Captain America", description: "cap"}, 
		{title: "Daredevil", description: "dd"}, 
		{title: "Hulk", description: "hulk"}
	];
	
var dc = [
		{title: "Batman", description: "bat"}, 
		{title: "Superman", description: "sup"}, 
		{title: "Flash", description: "flash"}, 
		{title: "Green Lantern", description: "lant"}, 
		{title: "Green Arrow", description: "arrow"}
	];
	

var getInfo = function(){
	var infoWin = Ti.UI.createWindow({
		backgroundColor: "white",
		
	});
	
	var infoTitleBar = Ti.UI.createView({
		height: 80,
		backgroundColor: "white",
		top: 20
	});
	
	var infoSpacer1 = Ti.UI.createView({
		height: 20,
		backgroundColor: "#d80c0c",
		top: infoTitleBar.height + infoTitleBar.top
	});
	
	var infoTitle = Ti.UI.createLabel({
		text: this.title,
		font: {fontSize: 40, fontStyle: "Helvetica", fontWeight: "bold"},
		textAlign: "center"
	});
	
	var originText = Ti.UI.createLabel({
		text: this.desc,
		font: {fontSize: 25, fontStyle: "Helvetica"},
		top: infoSpacer1.height + infoSpacer1.top + 20,
		left: 10,
		right: 10,	
	});
	
	//button
	var closeButton = Ti.UI.createLabel({
		text: "Close",
		backgroundColor: "#e3e3e3",
		color: "#white",
		height: 50,
		font: {fontSize: 15, fontFamily: "Helvetica"},
		width: "100%",
		bottom: 0,
		textAlign: "center"

	});
	
	var closeWin = function(){
		infoWin.close({transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT});
	};
	
	closeButton.addEventListener("click", closeWin);
	
	infoTitleBar.add(infoTitle);
	infoWin.add(infoTitleBar, infoSpacer1, originText, closeButton);
	
	infoWin.open({transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT});
};

for(var i=0,j=marvel.length; i<j; i++){
	var row = Ti.UI.createTableViewRow({
		title: marvel[i].title,
		desc: marvel[i].description,
		hasChild: true
	});
	
	if(Ti.Platform.name === "iPhone OS"){
	row.hasChild = false;
	row.hasDetail = true;
}; 

	marvelSection.add(row);
	row.addEventListener("click", getInfo);
};

for(var i=0,j=dc.length; i<j; i++){
	var row = Ti.UI.createTableViewRow({
		title: dc[i].title,
		desc: dc[i].description,
		hasChild: true
		
	});
	
	if(Ti.Platform.name === "iPhone OS"){
	row.hasChild = false;
	row.hasDetail = true;
};
	
	dcSection.add(row);
	row.addEventListener("click", getInfo);
};